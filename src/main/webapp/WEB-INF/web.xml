<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Notecard</display-name> <!--Name shown in Tomcat Manager-->
    <welcome-file>index.html</welcome-file> <!-- Landing Page -->

    <servlet>
        <servlet-name>TestServlet</servlet-name>   <!--Name Servlet-->
        <servlet-class>com.revature.notecard.servlet.TestServlet</servlet-class>
        <load-on-startup>1</load-on-startup> <!-- Tells Tomcat to eagerly create this servlet -->
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/authuser</url-pattern> <!--Map where this pattern maps to the servlet-->
    </servlet-mapping>

    <filter>
        <filter-name>Cors</filter-name>
        <filter-class>com.revature.notecard.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Cors</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>